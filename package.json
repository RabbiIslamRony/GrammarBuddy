{
  "name": "grammar-buddy",
  "version": "1.0.0",
  "description": "Your AI-powered writing assistant for better grammar and text suggestions",
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "format": "prettier --write \"**/*.{js,html,css,json}\"",
    "lint": "eslint . --ext .js",
    "test": "jest",
    "prepare-release": "npm run build && npm run format && npm run lint"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "chrome-extension",
    "grammar-checker",
    "writing-assistant",
    "ai",
    "text-suggestions"
  ],
  "author": "Your Name",
  "license": "MIT"
} 